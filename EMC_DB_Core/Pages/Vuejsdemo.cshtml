}
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js" integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<div id="app"> Set bien tinh
  {{ message }}
</div>

<script>
    var app = new Vue({
  el: '#app',
  data: {
    message: 'Do you wanna build a Vue app?'
  }
})
</script>


<div id="app-2">
  <span v-bind:title="message">
    Rê chuột lên đây một vài giây để xem thuộc tính `title` được bind! truyen data vao title
  </span>
</div>

<script>
    var app2 = new Vue({
  el: '#app-2',
  data: {
    message: 'Bạn đã mở trang này vào ' + new Date().toLocaleString()
  }
})
</script>

<div id="app-3">
  <span v-if="seen">Thoắt ẩn thoắt hiện</span>
</div>
<script>
    var app3 = new Vue({
  el: '#app-3',
  data: {
    seen: true //hien
  }
})
</script>

<div id="app-4">
  <ol>
    <li v-for="todo in todos">
      {{ todo.text }}
    </li>
  </ol>
</div>
<script>
    var app4 = new Vue({
  el: '#app-4',
  data: {
    todos: [
      { text: 'Học JavaScript' },
      { text: 'Học Vue' },
      { text: 'Xây dựng cái gì đó hay ho' }
    ]
  }
})
</script>

<div id="app-7">
  <p>Những thứ họ mua:</p>
  <ol>
    <!--
      Ở đây chúng ta cung cấp một 
      object "todo" cho mỗi component "todo-item". 
      Bằng cách này nội dung của từng component trở nên động.
      Mỗi component cũng sẽ nhận một thuộc tính "key". Chúng ta sẽ
      nói thêm về thuộc tính này sau.
    -->
    <todo-item
      v-for="item in groceryList"
      v-bind:todo="item"
      v-bind:key="item.id">
    </todo-item>
  </ol>
</div>
<script>
  Vue.component('todo-item', {
  props: ['todo'],
  template: '<li>{{ todo.text }}<div>{{ todo.text }}</div></li>'
})

var app7 = new Vue({
  el: '#app-7',
  data: {
    groceryList: [
      { id: 0, text: 'Cà pháo' },
      { id: 1, text: 'Mắm tôm' },
      { id: 2, text: 'Miễn ăn được là được' }
    ]
  }
})
</script>

<h1 v-if="ok">Mọi việc ổn cả</h1>
<h1 v-else>Có gì đó sai sai</h1>

<div v-if="Math.random() > 0.5">
  Tài
</div>
<div v-else>
  Xỉu
</div>




<div id="app8">
<div v-if="type === 'A'">A</div>
<div v-else-if="type === 'B'">B</div>
<div v-else-if="type === 'C'">C</div>
<div v-else-if="type === 'D'">D</div>
<div v-else>Chiến Sĩ không thể nhớ nổi</div>
</div>

<script>
    var app8 = new Vue({
  el: '#app8',
  data: {
    type: 'A'
  }
})
</script>
<div id="app9">
  {{ info }}
</div>
<script>
new Vue({
  el: '#app9',
  data () {
    return {
      info: null
    }
  },
  mounted () {
    axios
      .get('https://api.coindesk.com/v1/bpi/currentprice.json')
      .then(response => (this.info = response.data))
  }
})
</script>

